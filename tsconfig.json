{
	"compilerOptions": {
		"noImplicitAny": false,
		"target": "es6",
		"module": "commonjs",
		"allowJs": true,
		"resolveJsonModule": true,
		"outDir": "./dist",
		"strict": true,
		"strictPropertyInitialization": false,
		"moduleResolution": "node",
		"types": [],
		"esModuleInterop": true,
		"experimentalDecorators": true
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules"]
}
